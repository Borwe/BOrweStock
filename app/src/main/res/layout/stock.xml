<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5sp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center"
        android:padding="10sp"
        app:cardCornerRadius="5dp"
        app:cardElevation="23dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/stock_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.80"
                android:defaultFocusHighlightEnabled="false"
                android:elevation="8dp"
                android:minHeight="80sp"
                android:padding="2sp"
                android:paddingBottom="2sp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/textTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3sp"
                android:paddingTop="3sp"
                android:shadowColor="@android:color/background_dark"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:text="Testing shit"
                android:textColor="@color/accent_material_dark_1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cur_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3sp"
                android:paddingTop="3sp"
                android:text="No conversions, Try Refresh"
                android:textColor="@color/accent_material_dark_1"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_currencies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:spinnerMode="dialog" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
